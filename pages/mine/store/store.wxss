page {
  background-color: #F2F2F2;
}
.banner {
  height: 300rpx;
}
.number {
  position: relative;
  bottom: 53rpx;
  right: -322px;
  width: 100rpx;
  height: 50rpx;
  background-color: black;
}
.creditsExchange {
  height: 128rpx;
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1px solid #D9D9D9
}
.creditsExchange-credits {
  height: 100rpx;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center; 
  margin-top: 12rpx;
}
.border {
  border-right: 1px solid #D9D9D9
}
.creditsExchange-icon {
  height: 48rpx;
  width: 48rpx;
  margin-right: 20rpx;
}
.creditsExchange-title {
  font-size: 12pt;
  margin-right: 12rpx;
  font-weight: bold;
}
.creditsExchange-record {
  font-size: 12pt;
  color: #FF3C01;
  font-weight: bold;
}
.notice {
  height: 70rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: flex-start; */
  /* margin-bottom: 26rpx; */
  background-color: #FFFFFF;
}
.news-tag {
  height: 32rpx;
  width: 32rpx;
  padding-left: 28rpx;
  padding-top: 18rpx; 
}
.swiper_container {
  height: 70rpx;
  width: 80vw;
  padding-left: 20rpx;
  padding-top: 18rpx; 
}
 
.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
.giftRecommend {
  width: 100%;
  text-align: center;
  color: #9B9B9B;
  margin-top: 24rpx;
  font-size: 10pt;
  margin-bottom: 24rpx;
}
.gift_view {
  display: flex;
  flex-wrap: wrap;
}
.gift_view_cell {
  width: 365rpx;
  height: 370rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  margin-bottom: 15rpx;
  margin-left: 4rpx;
  /* justify-content: center;  */
}
.gift_image {
  height: 240rpx;
  width: 365rpx;
  /* background-color: red; */
}
.gift_title {
  font-size: 12pt;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.gift_bottom {
  display: flex;
  align-items: center;

}
.gift_bottom_count {
  color: #FE3900;
  font-size: 12pt;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.gift_bottom_title {
  color: #A0A0A0;
  font-size: 12pt;
  margin-left: 8rpx;
}
.gift_button {
  width: 80rpx;
  height: 35rpx;
